{
    "manifest_version": 3,
    "name": "Site Redirector",
    "version": "1.0",
    "description": "Redirect specific websites to others.",
    "permissions": ["declarativeNetRequest"],
    "host_permissions": ["*://*.youtube.com/*", "*://*.facebook.com/*"],
    "declarative_net_request": {
      "rule_resources": [
        {
          "id": "ruleset_1",
          "enabled": true,
          "path": "rules.json"
        }
      ]
    },
    "icons": {
      "48": "icon.png"
    }
  }
  